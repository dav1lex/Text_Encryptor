<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.omer.encryptor.Credits">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/buyapti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittextkutu"
            android:fontFamily="@font/g_light"
            android:gravity="center"
            android:text="This dude created this app \n\n↓↓↓↓↓↓↓ "
            android:textColor="@color/black"
            android:textSize="45dp" />


        <ImageButton
            android:id="@+id/instagrambutonu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/buyapti"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/ig" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/instagrambutonu" />

    </RelativeLayout>
</ScrollView>